<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="451.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="notisblokk.view.FxAppController">
   <children>
      <Button fx:id="saveNote" layoutX="200.0" layoutY="327.0" mnemonicParsing="false" onAction="#onSaveClick" prefHeight="38.0" prefWidth="200.0" text="Save note" />
      <TextField fx:id="titleField" layoutX="200.0" layoutY="50.0" prefHeight="38.0" prefWidth="200.0" promptText="title" />
      <TextArea fx:id="noteText" layoutX="200.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0" promptText="note" wrapText="true" />
      <Button fx:id="newNote" layoutX="40.0" layoutY="56.0" mnemonicParsing="false" onAction="#onNewNoteClick" prefHeight="27.0" prefWidth="100.0" text="New Note" />
      <Label layoutX="199.0" layoutY="14.0" text="Notepad">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <ListView fx:id="noteContainer" layoutX="40.0" layoutY="100.0" prefHeight="200.0" prefWidth="100.0" />
   </children>
</AnchorPane>